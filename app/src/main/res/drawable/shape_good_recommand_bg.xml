<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape><!--边框的颜色-->
            <solid android:color="@color/text_content1" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"><!--这里有四个方向可以选择，这里因为只要显示底部边框，所以就设置bottom-->
        <shape>
            <solid android:color="#fff" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp" />
            <!--整个空间的背景颜色-->
        </shape>
    </item>

</layer-list>