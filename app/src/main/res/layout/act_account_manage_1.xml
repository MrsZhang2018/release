<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_press"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fanwe.o2o.appview.CommonRowView
            android:id="@+id/crv_row1"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:crvLeftTxt="头像"
            app:crvShowRightDra="true"
            app:crvShowRightTxt="false" />

        <com.fanwe.o2o.appview.CommonRowView
            android:id="@+id/crv_row2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:crvLeftTxt="账号昵称"
            app:crvShowRightActionImg="false" />

        <com.fanwe.o2o.appview.CommonRowView
            android:id="@+id/crv_row4"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:crvLeftTxt="绑定手机"
            app:crvRightTxt="加载中" />

        <com.fanwe.o2o.appview.CommonRowView
            android:id="@+id/crv_row6"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:crvLeftTxt="社交账号绑定"
            app:crvRightTxt="微信" />

        <com.fanwe.o2o.appview.CommonRowView
            android:id="@+id/crv_row5"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:crvLeftTxt="修改密码"
            app:crvRightTxt="******"
            app:crvShowBottomDivider="false" />

    </LinearLayout>

</ScrollView>