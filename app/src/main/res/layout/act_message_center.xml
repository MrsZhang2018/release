<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_fra">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"/>

    <LinearLayout
        android:id="@+id/ll_logistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_white_to_gray_press"
        android:gravity="center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fanwe.library.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logistics"/>

            <TextView
                android:id="@+id/tv_logistics_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="0"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_red_circle"
                android:gravity="center"
                android:layout_gravity="right"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_logistics_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物流消息"
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content_deep"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_logistics_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"/>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_white_to_gray_press"
        android:gravity="center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fanwe.library.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notice"/>

            <TextView
                android:id="@+id/tv_notice_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="0"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_red_circle"
                android:gravity="center"
                android:layout_gravity="right"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notice_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="通知消息"
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content_deep"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_notice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"/>

    <LinearLayout
        android:id="@+id/ll_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_white_to_gray_press"
        android:gravity="center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fanwe.library.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_assets"/>

            <TextView
                android:id="@+id/tv_assets_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="0"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_red_circle"
                android:gravity="center"
                android:layout_gravity="right"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_assets_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="资产消息"
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content_deep"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_assets_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke"/>

    <LinearLayout
        android:id="@+id/ll_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_white_to_gray_press"
        android:gravity="center"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fanwe.library.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_verify"/>

            <TextView
                android:id="@+id/tv_verify_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="0"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_red_circle"
                android:gravity="center"
                android:layout_gravity="right"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_verify_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="验证消息"
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content_deep"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_verify_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_content"
                    android:textColor="@color/text_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无消息"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>