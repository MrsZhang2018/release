<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/bg_act_fra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_me_background"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_setting"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/iv_news"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_message"/>

                        <ImageView
                            android:id="@+id/iv_point"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:src="@drawable/bg_orange_circle"
                            android:layout_gravity="right"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp">

                        <com.fanwe.library.view.CircleImageView
                            android:id="@+id/iv_header"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_o2o_default_pic"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击登录或注册"
                            android:textColor="@color/bg_activity"
                            android:textSize="@dimen/text_size_item_title"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_account_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户管理"
                        android:textColor="#F7D430"
                        android:textSize="@dimen/text_size_content"
                        android:drawableRight="@drawable/ic_arrow_right_organce"
                        android:background="@drawable/layer_blur_left_corner_8dp"
                        android:paddingRight="8dp"
                        android:paddingLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_group_friend"
                    android:layout_below="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginRight="5dp">

                        <LinearLayout
                            android:id="@+id/ll_user_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/layer_blur_corner20dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_vip_icon"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/tv_user_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="普通会员"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_content"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/text_content_deep"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll_circle_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_circle_friend"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="朋友圈"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_content"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/layer_white_corner20dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/ll_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_balance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/stroke"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_integral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_integral"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/yellow_light"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_bind_tip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tv_bind_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定手机号"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_content"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="，确保账户安全"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"/>

                <ImageView
                    android:id="@+id/iv_dismiss"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_o2o_back"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_check_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"/>

                <TextView
                    android:id="@+id/tv_check_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部订单"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_content"
                    android:drawableRight="@drawable/ic_me_arrow_right_gray"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/stroke"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:id="@+id/ll_pen_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pen_pay"/>

                        <TextView
                            android:id="@+id/tv_pen_pay"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:text="0"
                            android:textSize="8sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_red_circle"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pen_sure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pen_sure"/>

                        <TextView
                            android:id="@+id/tv_pen_sure"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:text="0"
                            android:textSize="8sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_red_circle"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待确认"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_evaluate"/>

                        <TextView
                            android:id="@+id/tv_evaluate"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:text="0"
                            android:textSize="8sp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_red_circle"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_refund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_refund"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_bill"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买单"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_me_item"/>

            <RelativeLayout
                android:id="@+id/rl_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分销管理"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"/>

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通分销资格"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_content"
                    android:drawableRight="@drawable/ic_me_arrow_right_gray"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_dis"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/stroke"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_dis_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_dis_manage"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分销管理"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_market"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_market"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="市场"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_withdraw_cash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_withdrawal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_friends"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友"
                        android:textColor="@color/text_content_deep"
                        android:textSize="@dimen/text_size_content"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>