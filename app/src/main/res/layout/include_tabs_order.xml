<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.fanwe.library.view.SDTabUnderline
            android:layout_weight="1"
            android:id="@+id/tab_order_all"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.fanwe.library.view.SDTabUnderline
            android:layout_weight="1"
            android:id="@+id/tab_order_wait_payment"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.fanwe.library.view.SDTabUnderline
            android:layout_weight="1"
            android:id="@+id/tab_order_wait_send"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.fanwe.library.view.SDTabUnderline
            android:layout_weight="1"
            android:id="@+id/tab_order_wait_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.fanwe.library.view.SDTabUnderline
            android:layout_weight="1"
            android:id="@+id/tab_order_wait_evaluate"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>