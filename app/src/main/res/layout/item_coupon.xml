<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/ic_coupon_red_left"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/main_color"
                    android:textSize="25sp"/>

                <!--<TextView-->
                    <!--android:id="@+id/tv_dis2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text=".0折"-->
                    <!--android:textColor="@color/main_color"-->
                    <!--android:textSize="@dimen/text_size_content"/>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_mul1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_content"/>

                <TextView
                    android:id="@+id/tv_mul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/main_color"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/tv_mul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".0"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_content"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_coupon_red_right"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_coupon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="9"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/text_content_deep"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_item_content"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0km"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_item_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已抢"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_size_item_content"/>

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_item_content"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/tv_receive"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="马上领取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_item_content"
                    android:gravity="center"
                    android:background="@drawable/layer_orange_deep_corner2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_coupon_sold_out"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>