<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_gray_stroke_bot"
    android:gravity="center"
    android:padding="10dp">

    <!-- 左边 -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="@string/layout_widthPercent_item_left" >

        <com.fanwe.library.customview.SDScaleImageView
            android:id="@+id/iv_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nopic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:id="@+id/ll_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加载中"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content_deep"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中"
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_des2"
            android:layout_below="@+id/ll_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/text_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/main_color"/>

            <TextView
                android:id="@+id/tv_ori_price"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_content"
                android:textColor="@color/text_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>