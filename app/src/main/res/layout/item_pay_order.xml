<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_home_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/margin_default"
        android:src="@drawable/ic_store"/>

    <TextView
        android:id="@+id/tv_supplier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_home_icon"
        tools:text="店名00000"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_title"/>

    <ImageView
        android:layout_toRightOf="@id/tv_supplier_name"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_arrow_right_gray"/>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/main_color"
        tools:text="313153"/>

  </RelativeLayout>
  
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/bg_act_fra"/>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:gravity="center_vertical"
      android:layout_marginTop="10dp"
      android:layout_height="26dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费金额 :"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_content"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_consume_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11000"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_title"
        android:layout_marginLeft="5dp"/>

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:gravity="center_vertical"
      android:layout_height="26dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠金额 :"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_content"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_discount_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11000"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_title"/>

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:gravity="center_vertical"
      android:layout_height="26dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实付金额 :"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_content"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_actual_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11000"
        android:layout_marginLeft="5dp"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size_content"/>

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:gravity="center_vertical"
      android:layout_marginBottom="8dp"
      android:layout_height="26dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买单时间 :"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_content"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11000"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_title"/>

  </LinearLayout>

  <ImageView
      android:layout_marginTop="3dp"
      android:layout_width="match_parent"
      android:layout_height="8dp"
      android:background="@color/bg_act_fra"/>
  
</LinearLayout>