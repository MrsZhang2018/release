<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <FrameLayout
      android:layout_width="match_parent"
      android:background="@color/white"
      android:paddingLeft="8dp"
      android:layout_height="46dp">

    <com.fanwe.library.title.TitleItem
        android:id="@+id/title_item_shop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
  </FrameLayout>

  <LinearLayout
      android:id="@+id/ll_goods_info"
      android:layout_width="match_parent"
      android:layout_height="92dp"
      android:orientation="horizontal"
      android:paddingTop="12dp"
      android:background="@color/gray_bg"
      android:paddingLeft="8dp"
      android:paddingBottom="14dp">

    <ImageView android:id="@+id/iv_goods_image"
        android:scaleType="fitXY"
        android:layout_width="62dp"
        android:layout_height="62dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/tv_instruct"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:textColor="@color/text_title"
          android:textSize="@dimen/text_size_content"
          android:ellipsize="end"
          android:layout_marginLeft="10dp"
          tools:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"/>


      <TextView
          android:id="@+id/tv_group_pur"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:maxLines="1"
          android:textSize="@dimen/text_size_content"
          android:ellipsize="end"
          android:layout_marginLeft="10dp"
          android:textColor="@color/text_item_content"
          tools:text="sssssssssssssssssssssssssssssssssssss"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="7dp">

      <TextView
          android:id="@+id/tv_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          tools:text="¥56532512"
          android:textSize="@dimen/text_size_content"
          android:textColor="@color/main_color"/>

      <TextView
          android:id="@+id/tv_sum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:textColor="@color/text_title"
          android:textSize="@dimen/text_size_content"
          android:layout_marginBottom="6dp"
          tools:text="x1"/>

      <TextView
          android:id="@+id/tv_refund_feedback"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="¥56532512"
          android:textSize="@dimen/text_size_content"
          android:textColor="@color/main_color"/>

    </LinearLayout>
  </LinearLayout>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/stroke"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/gray_bg"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

      <ImageView
          android:id="@+id/iv_state"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:layout_marginLeft="10dp"
          android:background="@drawable/ic_tick"/>

      <TextView
          android:id="@+id/tv_state"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:layout_marginLeft="5dp"
          android:paddingTop="2dp"
          android:textColor="@color/text_title"
          tools:text="退款成功"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/gray_bg"
        android:layout_height="26dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申请时间 :"
          android:layout_marginLeft="10dp"
          android:background="@color/gray_bg"
          android:textColor="@color/text_title"
          android:textSize="14sp"/>

      <TextView
          android:id="@+id/tv_request_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="11000"
          android:textSize="@dimen/text_size_content"
          android:textColor="@color/text_content"
          android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund_money"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="26dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="退款金额 :"
          android:layout_marginLeft="10dp"
          android:textColor="@color/text_title"
          android:textSize="14sp"/>

      <TextView
          android:id="@+id/tv_refund_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="11000"
          android:layout_marginLeft="5dp"
          android:textColor="@color/text_orange"
          android:textSize="@dimen/text_size_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money_going_to"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_height="26dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="钱款去向 :"
          android:layout_marginLeft="10dp"
          android:textColor="@color/text_title"
          android:textSize="14sp"/>

      <TextView
          android:id="@+id/tv_money_going_to"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="11000"
          android:layout_marginLeft="5dp"
          android:textSize="@dimen/text_size_content"
          android:textColor="@color/text_content"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="商品退款总计 :"
          android:layout_marginLeft="10dp"
          android:textColor="@color/text_title"
          android:textSize="14sp"/>

      <TextView
          android:id="@+id/tv_total_refund"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="11000000"
          android:layout_marginLeft="5dp"
          android:textColor="@color/text_orange"
          android:layout_marginRight="8dp"
          android:textSize="@dimen/text_size_content"/>

    </LinearLayout>

  </LinearLayout>


</LinearLayout>