<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:gravity="center_vertical"
    android:background="@color/gray_bg"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp">

  <CheckBox
      android:id="@+id/cb_check"
      android:layout_gravity="center"
      android:layout_width="35dp"
      android:layout_height="40dp"
      android:layout_marginLeft="3dp"
      android:button="@drawable/selector_check_box_red_gray"
      android:checked="false"/>

  <ImageView android:id="@+id/iv_goods_image"
      android:scaleType="fitXY"
      android:layout_width="70dp"
      android:layout_height="70dp"/>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:orientation="vertical">

    <TextView
        android:id="@+id/tv_instruct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_size_content"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        tools:text="ssssssssssssssssssssssssssssssssssssssss"/>


    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4161531"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_instruct"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_item_content"/>


    <TextView
        android:id="@+id/tv_goods_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4161531"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/text_title"/>

    <TextView
        android:id="@+id/tv_spec"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="规格: L"
        android:layout_below="@+id/tv_code"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_content"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  </RelativeLayout>





</LinearLayout>
