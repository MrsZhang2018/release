<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

  <TextView
      android:id="@+id/tv_right"
      android:layout_toLeftOf="@+id/iv_right_action_img"
      tools:text="###"
      android:layout_marginRight="8dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"/>


  <com.fanwe.library.view.CircleImageView
      android:id="@+id/civ_right"
      android:layout_toLeftOf="@id/iv_right_action_img"
      tools:src="@drawable/gradient_blue"
      android:padding="3dp"
      android:layout_width="45dp"
      android:layout_height="match_parent"/>

  <ImageView
      android:id="@+id/iv_right_action_img"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:layout_alignParentRight="true"
      android:src="@drawable/ic_arrow_right_gray"/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/iv_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_press"/>
  </FrameLayout>
  <TextView
      android:id="@+id/tv_left"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      tools:text="###" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>


</RelativeLayout>