<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_fra">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="70dp"
            android:gravity="center">

            <com.fanwe.library.customview.SD2LvCategoryView
                android:id="@+id/lcv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="70dp"
            android:gravity="center"
            android:layout_marginLeft="10dp">

            <com.fanwe.library.customview.SD2LvCategoryView
                android:id="@+id/lcv_middle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_highest_eval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_highest_eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价最高"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nearest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_nearest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="离我最近"
                    android:textColor="@color/text_content_deep"
                    android:textSize="@dimen/text_size_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>