<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <declare-styleable name="HeadlinesView">
        <attr name="gap" format="integer" />
        <attr name="animDuration" format="integer"/>
    </declare-styleable>

    <style name="CommonRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_ratingbar_store_list_item</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minWidth">20dp</item>
    </style>

</resources>
